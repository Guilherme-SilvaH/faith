{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",  // Corrija para o diretório onde os arquivos estão localizados
    "outDir": "./dist",  // Saída dos arquivos compilados
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/app.ts",  // Inclua diretamente seu arquivo ou use um padrão para todos os arquivos
    "./**/*.ts"   // Isso inclui todos os arquivos .ts no projeto
  ]
}
